<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView android:id="@+id/tvEnterTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Enter your 4 digit EmployeeId" />

    <EditText
        android:id="@+id/etEmployeeId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tvEnterTextView"
        android:inputType="numberSigned"        
        android:gravity="center_horizontal"
        android:hint="Employee Id"/>

    <Button android:id="@+id/btViewNearby"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etEmployeeId"
        android:layout_marginTop="10dp"
        android:text="View Near By" />

</RelativeLayout>
       
 